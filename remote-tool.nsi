  Delete "$INSTDIR\platforms\qdirect2d.dll"
  Delete "$INSTDIR\libeay32.dll"
  Delete "$INSTDIR\daemon.dll"
  Delete "$INSTDIR\D3DRender.dll"
  Delete "$INSTDIR\co-start.exe"
  Delete "$INSTDIR\co-client.dll"
  Delete "$INSTDIR\capture.dll"
  Delete "$INSTDIR\avutil-56.dll"
  Delete "$INSTDIR\avcodec-58.dll"

  Delete "$SMPROGRAMS\远程协作工具\Uninstall.lnk"
  Delete "$DESKTOP\远程协作工具.lnk"
  Delete "$SMPROGRAMS\远程协作工具\远程协作工具.lnk"

  RMDir "$SMPROGRAMS\远程协作工具"
  RMDir "$INSTDIR\resources"
